@model IEnumerable<prj_FUNShare.Models.Product>

@{
    ViewData["Title"] = "PocketList";
}

<h1 class=" mb-8">我的收藏</h1>
<div class="tab-content" id="ex-with-icons-content">
    <div  id="ex-with-icons-tabs-1" >
        <div class="row g-4" id="div1">
                @foreach(var item in Model)
        {
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
    <div class="card">
        <div class="position-relative overflow-hidden">
            <a href="">
                <img class="card-img-top transform"
                     src="~/products/@item.ImageList.FirstOrDefault().ImagePath" alt="">
            </a>
            <div class="position-absolute top-0 end-0" style="margin-top: 5px;margin-right: 5px;">
                <button type="button" class="btn btn-white btn-floating btn-lg">
                    <i class="fa-regular fa-heart fa-xl pe-none"></i>
                </button>
            </div>
            <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">
                @item.ProductName
            </div>
        </div>
        <div class="p-4 pb-0">
            <a class="d-block h5 mb-2" href="">Golden Urban House For Sell</a>
            <p>123 Street, New York, USA. 123 Street, New York, USA. 123 Street, New York, USA.</p>
            <h5 class="text-end mb-3">@item.ProductDetail.FirstOrDefault().UnitPrice</h5>
        </div>
        <div class="d-flex border-top">
            <small class="flex-fill text-center border-end py-2">
                <i class="fa fa-map-marker-alt text-primary me-2"></i>@item.ProductDetail.FirstOrDefault().District.City.CityName
            </small>
            <small class="flex-fill text-center border-end py-2">
                <i class="fa fa-star text-primary me-2"></i>3.5
            </small>
            <small class="flex-fill text-center py-2">
                <i class="fa-solid fa-calendar-days text-primary me-2"></i>@item.ProductCategories.FirstOrDefault().SubCategory.Category.CategoryName
            </small>
        </div>
    </div>
</div>
        }
        </div>
    </div>
</div>
